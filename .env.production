# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000
DOMAIN=your-production-domain.com
SESSION_SECRET=your-secure-production-session-secret-here

# ===========================================
# API CONFIGURATION
# ===========================================
SOA_API_DOMAIN=

# ===========================================
# CDN CONFIGURATION
# ===========================================
CDN_URL=https://shishiv30.github.io/pure

# ===========================================
# WEBPACK BUILD CONFIGURATION
# ===========================================
WEBPACK_MODE=production
WEBPACK_DEVTOOL=
WEBPACK_STATS=normal
WEBPACK_MINIMIZE=true
WEBPACK_OPTIMIZE=true

# ===========================================
# WEBPACK DEV SERVER CONFIGURATION
# ===========================================
WEBPACK_DEV_SERVER_PORT=8080
WEBPACK_DEV_SERVER_HOST=localhost
WEBPACK_HOT_RELOAD=false
WEBPACK_WRITE_TO_DISK=false
WEBPACK_COMPRESS=false

# ===========================================
# DEVELOPMENT FEATURES
# ===========================================
ENABLE_CORS=false
CORS_ORIGIN=
ENABLE_LOGGING=false
LOG_LEVEL=info

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
ENABLE_SECURITY_HEADERS=true
TRUST_PROXY=true

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_MAX_AGE=86400

# ===========================================
# MONITORING & DEBUGGING
# ===========================================
ENABLE_SWAGGER=false
ENABLE_METRICS=true
ENABLE_ERROR_TRACKING=true