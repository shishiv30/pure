<%if(article){%>
<article>
  <a href="<%=article.href%>" data-id="<%= article.id%>">
      <address><%=article.title%></address>
  </a>
  <ul>
        
      <%if(article.attrs && article.attrs.length){%>
        <%for(var i=0; i<article.attrs.length; i++){%>
          <% const attr = article.attrs[i]; %>
          <li>
              <span class="<%=attr.className%>" ><%=attr.value%></span> <abbr title="<%=attr.desc%>"><%=attr.key%></abbr>
          </li>
        <%}%>
      <%}%>
  </ul>
  <figure>
      <img src="<%=article.img%>" alt="<%=article.imgAlt%>" loading="lazy">
      <figcaption><%=article.imgTag%></figcaption>
  </figure>
  <%if(article.tags && article.tags.length){%>
    <div class="tags">
      <%for(var i=0; i<article.tags.length; i++){%>
        <% const tag = article.tags[i]; %>
        <span class="tag <%=tag.className%>"><%=tag.text%></span>
      <%}%>
    </div>
  <%}%>
</article>
<%}%>