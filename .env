# ===========================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===========================================

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3000
DOMAIN=localhost
SESSION_SECRET=

# ===========================================
# API CONFIGURATION like https://www.xxx.com
# ===========================================
SOA_API_DOMAIN=

# ===========================================
# CDN CONFIGURATION
# ===========================================
CDN_URL=

# ===========================================
# WEBPACK BUILD CONFIGURATION
# ===========================================
WEBPACK_MODE=development
WEBPACK_DEVTOOL=source-map
WEBPACK_STATS=minimal
WEBPACK_MINIMIZE=false
WEBPACK_OPTIMIZE=false

# ===========================================
# WEBPACK DEV SERVER CONFIGURATION
# ===========================================
WEBPACK_DEV_SERVER_PORT=8080
WEBPACK_DEV_SERVER_HOST=localhost
WEBPACK_HOT_RELOAD=true
WEBPACK_WRITE_TO_DISK=true
WEBPACK_COMPRESS=true

# ===========================================
# DEVELOPMENT FEATURES
# ===========================================
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:8080
ENABLE_LOGGING=true
LOG_LEVEL=debug

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
ENABLE_SECURITY_HEADERS=false
TRUST_PROXY=false

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
ENABLE_COMPRESSION=false
ENABLE_CACHING=false
CACHE_MAX_AGE=0

# ===========================================
# MONITORING & DEBUGGING
# ===========================================
ENABLE_SWAGGER=true
ENABLE_METRICS=false
ENABLE_ERROR_TRACKING=false